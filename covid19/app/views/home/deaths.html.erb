<div class="text-center">
    <p>Dados de Mortes confirmadas por continente</p>
    <br />

    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th scope="col">Continente</th>
                <th scope="col">Total de Mortes</th>
                <th scope="col">Novas Mortes</th>
            </tr>
        </thead>
        <tbody>
            
                <% i = 0 %>
                <%= while i <= 5 do %>
                    <tr>
                        <td><%= @sumary_service['data'][i]['CountryOther'] %></td>
                        <td><%= @sumary_service['data'][i]['TotalDeaths'] %></td>
                        <td><%= @sumary_service['data'][i]['NewDeaths']%></td>
                        </tr>
                        <% i += 1%>
                <% end %>

        </tbody>
    </table>
    <div>
     <%= link_to 'Volta', root_path, class: "btn btn-secondary" %>
    </div>
</div>

