    
<h2>Dados de Casos confirmados por País</h2>
<br />
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">País</th>
      <th scope="col">Total de Casos Confirmados</th>
      <th scope="col">Última Atualização</th>
    </tr>
  </thead>
  <tbody>
    <% id = 0 %>
    <%  while id <= 195 do %>
      <tr>
        <td><%= @pais[id]['country_region'] %></td>
        <td><%= sprintf('%.0f',@pais[id]['latest']['confirmed']).gsub(/(\d)(?=(\d{3})+(?!\d))/, '\\1.')%></td>
        <td><%= Date.parse(@pais[id]['latest']['last_updated_at']).strftime('%d/%m/%Y')%></td>
      </tr>
      <% id += 1%>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'Volta', root_path, class: "btn btn-secondary" %>
</div>
</div>
