<div class="text-center">
    <h2>Dados de Recuperados por Continente</h2>
    <br />

    <table class="table table-info table-bordered">
        <thead>
            <tr>
                <th scope="col">Continente</th>
                <th scope="col">Total de Recuperados</th>
                <th scope="col">Novos Recuperados</th>
            </tr>
        </thead>
        <tbody>
            
                <% i = 0 %>
                <%= while i <= 5 do %>
                    <tr>
                        <td><%= @sumary_service['data'][i]['CountryOther'] %></td>
                        <td><%= @sumary_service['data'][i]['TotalRecovered'] %></td>
                        <td><%= @sumary_service['data'][i]['NewRecovered']%></td>
                        </tr>
                        <% i += 1%>
                <% end %>
        </tbody>
    </table>
    <div>
     <%= link_to 'Volta', root_path, class: "btn btn-secondary" %>
    </div>
</div>
